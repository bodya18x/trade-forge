# --- Service Configuration ---
SERVICE_VERSION="0.2.0"

# --- JWT Configuration ---
JWT_SECRET_KEY="your_jwt_secret_key_change_this_in_production_please"
JWT_ALGORITHM="HS256" 
JWT_EXPIRE_MINUTES=15

# --- Redis Database Number (Gateway-specific) ---
REDIS_DB=4

# --- Internal API Configuration ---
INTERNAL_API_BASE_URL="http://internal-api:8000"
INTERNAL_API_TIMEOUT=30

# --- CORS Configuration ---
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting использует тот же Redis что и основной (упрощенная конфигурация)

# GeoIP Configuration
GEOIP_DATABASE_PATH="./geoip/GeoLite2-City.mmdb"
# Ключ получить можно тут https://dev.maxmind.com/geoip/updating-databases/

